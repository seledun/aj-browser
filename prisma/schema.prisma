generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model videos {
  id           String     @unique
  title        String
  summary      String
  playCount    Int
  likeCount    Int
  angerCount   Int
  duration     Float?
  createdAt    String
  commentCount Int?
  comments     comments[]
}

model comments {
  id         String    @unique
  videoId    String
  content    String
  userId     String
  username   String
  userType   String
  posVotes   Int
  linkedUser String?
  createdAt  String
  replyCount Int
  video      videos    @relation(fields: [videoId], references: [id])
  replies    replies[]
}

model replies {
  id             String   @unique
  content        String
  liked          String
  userId         String
  userName       String
  voteCount      Int
  linkedUserName String?
  linkedUserId   String?
  createdAt      String
  replyTo        String
  comment        comments @relation(fields: [replyTo], references: [id])
}

model updated {
  id      Int     @id @default(autoincrement())
  updated String?
}
