generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Video {
  id           String     @unique
  title        String
  summary      String
  playCount    Int
  likeCount    Int
  angerCount   Int
  duration     Float?
  createdAt    String
  commentCount Int?
  comments     Comment[]
}

model Comment {
  id             String    @unique
  videoId        String
  content        String
  userId         String
  username       String
  userType       String
  posVotes       Int
  linkedUserName String?
  linkedUserId   String?
  createdAt      String
  replyCount     Int
  video          Video    @relation(fields: [videoId], references: [id])
  replies        Reply[]
}

model Reply {
  id             String   @unique
  content        String
  liked          String
  userId         String
  userName       String
  voteCount      Int
  linkedUserName String?
  linkedUserId   String?
  createdAt      String
  replyTo        String
  comment        Comment @relation(fields: [replyTo], references: [id])
}

model updated {
  id      Int     @id @default(autoincrement())
  updated String?
}
